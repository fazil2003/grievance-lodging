<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Use this theme in Manifest by default -->
    <style name="LightTheme" parent="Theme.Code" />

    <!-- Base application theme. -->
    <style name="Theme.Code" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/dodgerblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#FFFAF4</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">#FFFAF4</item>

        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->

        <!-- Default Height is 56dp = 56 + 24 + 20(extra) to match the Status Bar-->
        <!--        <item name="actionBarSize">100dip</item>-->
        <!--        <item name="android:actionBarSize">100dip</item>-->

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_medium</item>

        <!-- Avoid Dark Mode in Mi Devices -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="backgroundColor">#FFFAF4</item>
        <item name="primaryColor">@color/white</item>
        <item name="secondaryColor">@color/darkcolor_1</item>
        <item name="premiumColor">@color/premiumcolor_1</item>
        <item name="cardViewColor">#FFF2E2</item>
        <item name="buttonColor">@color/darkcolor_1</item>
        <item name="fontColor">@color/white</item>

        <item name="buttonColor1">@color/buttoncolor_1</item>
        <item name="buttonColor2">@color/buttoncolor_2</item>

        <item name="fontNormal">@font/montserrat_medium</item>
        <item name="fontBold">@font/montserrat_bold</item>
        <item name="fontSemiBold">@font/montserrat_semibold</item>

        <!-- <item name="android:windowTranslucentStatus">true</item> -->
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/textinputlayout_box_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_dialog_slide_out</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>


    <!-- DARK THEME -->
    <!-- Use this theme in Manifest by default -->
    <style name="DarkTheme" parent="Theme.Code.Dark" />

    <!-- Base application theme. -->
    <style name="Theme.Code.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/dodgerblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkcolor_1</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/darkcolor_1</item>

        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->

        <!-- Default Height is 56dp = 56 + 24 + 20(extra) to match the Status Bar-->
        <!--        <item name="actionBarSize">100dip</item>-->
        <!--        <item name="android:actionBarSize">100dip</item>-->

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_medium</item>

        <!-- Avoid Dark Mode in Mi Devices -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="backgroundColor">@color/darkcolor_1</item>
        <item name="primaryColor">@color/darkcolor_1</item>
        <item name="secondaryColor">@color/white</item>
        <item name="premiumColor">@color/premiumcolor_2</item>
        <item name="cardViewColor">#555454</item>
        <item name="buttonColor">@color/white</item>
        <item name="fontColor">@color/darkcolor_1</item>

        <item name="buttonColor1">@color/buttoncolor_1</item>
        <item name="buttonColor2">@color/buttoncolor_2</item>

        <item name="fontNormal">@font/montserrat_medium</item>
        <item name="fontBold">@font/montserrat_bold</item>
        <item name="fontSemiBold">@font/montserrat_semibold</item>

        <!-- <item name="android:windowTranslucentStatus">true</item> -->
    </style>

</resources>